<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_area_bg_inner_dark"/>
            <stroke android:color="@color/theme_color" android:width="@dimen/default_divider_height"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_area_bg_inner"/>
            <stroke android:color="@color/theme_color" android:width="@dimen/default_divider_height"/>
        </shape>
    </item>
</selector>