<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/text_area_bg_inner_dark"/>
            <stroke android:color="@color/theme_color" android:width="1px"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/text_area_bg_inner"/>
            <stroke android:color="@color/theme_color" android:width="1px"/>
            <corners android:radius="5dp"/>
        </shape>

    </item>
</selector>