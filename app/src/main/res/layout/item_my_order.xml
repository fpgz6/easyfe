<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/text_area_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/default_divider_height"
    android:paddingLeft="@dimen/layout_padding_small">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/text_area_bg_inner">
    <CheckBox
        android:id="@+id/item_my_order_cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_normal"
        android:layout_marginRight="@dimen/layout_margin_normal"
        android:buttonTint="@color/primary"
        android:focusable="false"
        android:visibility="gone"
        tools:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/default_divider_height"
        android:layout_height="match_parent"
        android:background="@color/transparent"/>

    <LinearLayout
        android:id="@+id/item_my_order_ll_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_my_order_tv_num"
            style="@style/my_order_item_style"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="@dimen/default_divider_height"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            tools:text="订单 : 123456789" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2.4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_my_order_tv_teacher"
                        style="@style/my_order_item_style"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        tools:text="黄老师" />

                    <TextView
                        android:id="@+id/item_my_order_tv_course"
                        style="@style/my_order_item_style"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        tools:text="人生哲理" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginTop="@dimen/default_divider_height"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_my_order_tv_date"
                        style="@style/my_order_item_style"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical|left"
                        android:textSize="@dimen/text_size_small"
                        tools:text="2016年12月12日(星期六)" />

                    <TextView
                        android:id="@+id/item_my_order_tv_period"
                        style="@style/my_order_item_style"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="@dimen/text_size_small"
                        tools:text="上午" />

                    <TextView
                        android:id="@+id/item_my_order_tv_teach_time"
                        style="@style/my_order_item_style"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="0dp"
                        android:textSize="@dimen/text_size_small"
                        tools:text="2小时0分钟" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/item_my_order_tv_price"
                style="@style/my_order_item_style"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/default_divider_height"
                android:layout_weight="1"
                android:textColor="@color/theme_color_dark"
                android:textSize="@dimen/text_size_normal"
                tools:text="341.67 元" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
