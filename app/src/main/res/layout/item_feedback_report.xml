<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="@color/text_area_bg"
    android:clickable="false"
    android:padding="@dimen/default_divider_height"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_area_bg_inner"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_feedback_report_tv_content"
            style="@style/my_order_item_style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@color/text_area_bg_inner"
            android:gravity="center_vertical|left"
            android:padding="@dimen/layout_padding_small"
            tools:text="性别: 男\n大学专业: 华南理工大学 软件工程专业\n已家教过的孩子数量: 18\n已家教的时长: 250小时\n综合评分: 58分" />

        <View
            android:layout_width="@dimen/default_divider_height"
            android:layout_height="match_parent"
            android:background="@color/bg_color_divider"/>
        <TextView
            android:id="@+id/item_feedback_report_tv_detail"
            style="@style/my_order_item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/layout_padding_normal"
            android:layout_margin="@dimen/layout_margin_normal"
            android:background="@drawable/selector_spread_reserve"
            android:text="详  情"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/default_border_height"
        android:background="@color/text_area_bg_inner"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/layout_padding_tiny"
            android:paddingLeft="@dimen/layout_padding_small"
            android:background="@color/text_area_bg_inner"
            android:clickable="false"
            android:paddingTop="@dimen/layout_padding_tiny"
            android:text="学生本次积极性："
            android:textSize="@dimen/text_size_normal" />

        <io.techery.properratingbar.ProperRatingBar
            android:id="@+id/item_feedback_report_prb_enthusiasm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            app:prb_clickable="false"
            app:prb_defaultRating="5"
            app:prb_tickNormalDrawable="@mipmap/ic_star_normal"
            app:prb_tickSelectedDrawable="@mipmap/ic_star_selected"
            app:prb_tickSpacing="0dp"
            app:prb_totalTicks="5" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_divider_height"
        android:gravity="center_vertical"
        android:background="@color/text_area_bg_inner"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/layout_padding_tiny"
            android:paddingLeft="@dimen/layout_padding_small"
            android:background="@color/text_area_bg_inner"
            android:paddingTop="@dimen/layout_padding_tiny"
            android:clickable="false"
            android:text="学生本次吸收程度："
            android:textSize="@dimen/text_size_normal" />

        <io.techery.properratingbar.ProperRatingBar
            android:id="@+id/item_feedback_report_prb_absorption_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            app:prb_clickable="false"
            app:prb_defaultRating="5"
            app:prb_tickNormalDrawable="@mipmap/ic_star_normal"
            app:prb_tickSelectedDrawable="@mipmap/ic_star_selected"
            app:prb_tickSpacing="0dp"
            app:prb_totalTicks="5" />
    </LinearLayout>

</LinearLayout>
