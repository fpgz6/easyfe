<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_large"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_message_tv_sender"
            style="@style/text_normal_style"
            android:layout_width="wrap_content"
            android:padding="@dimen/layout_padding_small"
            android:clickable="false"
            tools:text="系统消息"
            />

        <TextView
            android:id="@+id/item_message_tv_date"
            style="@style/text_normal_style"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:clickable="false"
            tools:text="2016-3-8  5：20"/>
    </LinearLayout>
    <TextView
        style="@style/text_normal_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="46dp"
        android:gravity="left"
        android:padding="@dimen/layout_padding_small"
        android:clickable="false"
        android:textSize="@dimen/text_size_normal"
        tools:text="您的订单号为 xxxx xxxx 的订单报酬 512 元已到账，请注意查收！"
        android:id="@+id/item_message_tv_content" />
</LinearLayout>